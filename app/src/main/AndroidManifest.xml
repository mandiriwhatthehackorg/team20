<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.marimo.whatthehack.apps">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-feature android:name="android.hardware.camera" android:required="true"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/marimo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity"/>
        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
        <activity android:name=".DaftarGawai"/>
        <activity android:name=".RecyclingActivity"/>
        <activity android:name=".PendaftaranActivity"/>
        <activity android:name=".PenukaranActivity"/>
        <activity android:name=".MetodePengambilanActivity"/>
        <activity android:name=".KonfirmasiPengambilan"/>
        <activity android:name=".DetailPengambilan"/>
    </application>

</manifest>